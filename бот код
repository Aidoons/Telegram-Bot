бот  =  телебот . TeleBot ( '1397833889: AAE14aC774Am-BTYHMJ8NN2x_IXtTBiqdVs' )

# Функция, что сработает при отправке команды Старт
# Здесь мы создаем быстрые кнопки, а также сообщение с привествием
@ бот . message_handler ( commands = [ 'начало' ])
def  start ( сообщение ):
    разметка  =  типы . ReplyKeyboardMarkup ( resize_keyboard = True , row_width = 2 )
    item1  =  типы . KeyboardButton ( "Молочная девочка" )
    item2  =  типы . KeyboardButton ( «Красный бархат» )
    item3  =  типы . KeyboardButton ( "Торт вупи пай" )
    item4  =  типы . KeyboardButton ( «Чизкейк Нью Йорк» )
    item5  =  типы . KeyboardButton ( "Черный лес торт" )
    item6  =  типы . KeyboardButton ( "Торт орео" )

 
    разметка . добавить ( item1 , item2 , item3 , item4 , Item5 , item6 )

    send_message  =  f "<b> Привет { message . from_user . first_name } ! </b> \ n Чтобы узнать рецепты тортов напишите название тортов, например: Яблочный, Бархатный, Медовый и так далее \ n " 
    бот . send_message ( сообщение . чат . id , send_message , parse_mode = 'html' , reply_markup = разметка )

# Функция, что сработает при отправке какого-либо текста боту
@ бот . message_handler ( content_types = [ 'текст' ])
def  mess ( сообщение ):
    final_message  =  ""
    если  сообщение . чат . type  ==  'private' :
        если  сообщение . text  ==  'Молочная девочка' :
            final_message  =  f "Молочная девочка \ n \ n 1 банка сгущёнка \ n 3 яйцо \ n 220 гр мука \ n 10гр разрыхлитель \ n \ n Крем \ n \ n 700 гр сливки 33% \ n 150 гр сахарная пудра"
            бот . send_message ( сообщение . чат . id , final_message )
         сообщение elif . text  ==  'Красный бархат' :
            final_message  =  f "Красный бархат \ n \ n 200 гр сахар \ n 3 яйцо \ n 280 кефир 2,5% \ n 1 ч.л сода \ n 190 подсолнечная масло \ n 15 разрыхлитель \ n Краситель 1/2 ст ложки \ n 1 ч.л какао \ n \ n Крем \ n \ n 600 гр тв. Сыр \ n 150 сахарная пудра \ n 500 мл сливки "
